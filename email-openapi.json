{
  "openapi": "3.0.0",
  "info": {
    "title": "Email Sender",
    "description": "Send emails via Azure Function proxy",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://festivetechcalendar2025-func.azurewebsites.net/api"
    }
  ],
  "paths": {
    "/send": {
      "post": {
        "operationId": "sendEmail",
        "summary": "Send an email to a recipient",
        "description": "Sends an email with the specified recipient, subject, and body. Use this tool when a user wants to send an email notification.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["to", "subject", "body"],
                "properties": {
                  "to": {
                    "type": "string",
                    "description": "Email address of the recipient"
                  },
                  "subject": {
                    "type": "string",
                    "description": "Subject line of the email"
                  },
                  "body": {
                    "type": "string",
                    "description": "Body content of the email in plain text"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Email sent successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
